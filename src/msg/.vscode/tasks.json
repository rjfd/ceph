{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build simple_client",
      "type": "shell",
      "command": "make",
      "args": [
        "-j4",
        "simple_client",
        "simple_server"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}/../../build"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
    }
  ]
}